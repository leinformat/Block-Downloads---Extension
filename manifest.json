{
    "manifest_version": 3,
    "name": "Bloqueador de Descargas",
    "version": "1.0",
    "description": "Evita que los usuarios descarguen archivos.",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "downloads"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./images/logo.png",
            "48": "./images/logo.png",
            "128": "./images/logo.png"
        }
    }
}